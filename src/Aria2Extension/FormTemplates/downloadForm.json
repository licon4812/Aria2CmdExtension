{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "body": [
    {
      "type": "Input.Text",
      "placeholder": "[URI | MAGNET | TORRENT_FILE | METALINK_FILE]",
      "label": "File ",
      "style": "Url",
      "id": "file"
    },
    {
      "type": "Input.Text",
      "placeholder": "The directory to store the downloaded file.",
      "value": "%UserProfile%\\Downloads\\",
      "label": "Directory",
      "id": "directory",
      "isRequired": true,
      "errorMessage": "Directory is required"
    },
    {
      "type": "Input.Text",
      "placeholder": "Name of the output file",
      "label": "Output Name",
      "id": "output"
    },
    {
      "type": "Input.Number",
      "placeholder": "1-*",
      "label": "Split",
      "min": 1,
      "max": 5,
      "value": 5,
      "id": "split"
    },
    {
      "type": "Input.ChoiceSet",
      "choices": [
        {
          "title": "none",
          "value": "none"
        },
        {
          "title": "prealloc",
          "value": "prealloc"
        },
        {
          "title": "trunc",
          "value": "trunc"
        },
        {
          "title": "falloc",
          "value": "falloc"
        }
      ],
      "placeholder": "prealloc",
      "id": "fileAllocation",
      "label": "File Allocation",
      "value": "prealloc"
    },
    {
      "type": "Input.Toggle",
      "title": "Check Integrity",
      "label": "Check Integrity",
      "id": "integrity",
      "value": "false"
    },
    {
      "type": "Input.Toggle",
      "title": "Continue",
      "label": "Continue",
      "id": "continue"
    },
    {
      "type": "Input.Text",
      "placeholder": "Downloads URIs found in FILE.",
      "id": "inputFile",
      "label": "Input File"
    },
    {
      "type": "Input.Number",
      "placeholder": "Placeholder text",
      "id": "maxConcurrentDownloads",
      "label": "Max Concurrent Downloads",
      "value": 5,
      "min": 1
    },
    {
      "type": "Input.Toggle",
      "title": "Force Sequential",
      "id": "forceSequential",
      "label": "Force Sequential",
      "value": "false"
    },
    {
      "type": "Input.Number",
      "placeholder": "Placeholder text",
      "id": "maxConnection",
      "label": "Max Connection Per Server",
      "min": 1,
      "max": 16,
      "value": 1
    },
    {
      "type": "Input.Text",
      "placeholder": "user",
      "id": "ftpUser",
      "label": "FTP User"
    },
    {
      "type": "Input.Text",
      "placeholder": "Password",
      "id": "ftpPassword",
      "label": "FTP Password",
      "style": "Password"
    },
    {
      "type": "Input.Text",
      "placeholder": "user",
      "id": "httpUser",
      "label": "HTTP User"
    },
    {
      "type": "Input.Text",
      "placeholder": "Password",
      "id": "HTTP Password",
      "label": "HTTP Password",
      "style": "Password"
    },
    {
      "type": "Input.Text",
      "placeholder": "/path/to/cookies/file",
      "id": "cookiesFile",
      "label": "Cookies File"
    },
    {
      "type": "Input.Toggle",
      "title": "Show Files",
      "label": "Show Files",
      "id": "showFiles",
      "value": "false"
    },
    {
      "type": "Input.Number",
      "placeholder": "Set max overall upload speed in bytes/sec. 0 means unrestricted.",
      "label": "Max Overall Upload Limit",
      "value": 0,
      "min": 0,
      "id": "maxOverallUpload"
    },
    {
      "type": "Input.Number",
      "placeholder": "Set max upload speed in bytes/sec. 0 means unrestricted.",
      "label": "Max Upload Limit",
      "value": 0,
      "min": 0,
      "id": "maxUpload"
    },
    {
      "type": "Input.Text",
      "placeholder": "/path/to/file",
      "id": "torrentfile",
      "label": "Torrent File Path"
    },
    {
      "type": "Input.Text",
      "placeholder": "6881-6999",
      "id": "listenPort",
      "label": "Listen Port",
      "value": "6881-6999"
    },
    {
      "type": "Input.Toggle",
      "title": "Enable DHT",
      "id": "enableDHT",
      "value": "true"
    },
    {
      "type": "Input.Text",
      "placeholder": "6881-6999",
      "id": "dhtListenPort",
      "label": "DHT Listen Port",
      "value": "6881-6999"
    },
    {
      "type": "Input.Toggle",
      "title": "Enable DHT 6",
      "id": "enableDHT6",
      "value": "false"
    },
    {
      "type": "Input.Text",
      "placeholder": "::1",
      "id": "dht6ListenAddress",
      "label": "DHT6 Listen Address",
      "value": "::1"
    },
    {
      "type": "Input.Text",
      "placeholder": "/path/to/file",
      "id": "metalinkFile",
      "label": "Metalink File"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Download"
        }
      ],
      "id": "submit",
      "horizontalAlignment": "Left"
    }
  ]
}